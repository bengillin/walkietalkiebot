{
  "name": "@bengillin/talkboy",
  "version": "0.0.1",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bengillin/talkboy.git"
  },
  "description": "A voice-first, avatar-based interface for Claude Code",
  "type": "module",
  "bin": {
    "talkboy": "bin/talkboy.js",
    "talkboy-mcp": "bin/talkboy-mcp.js"
  },
  "files": [
    "bin/",
    "server/",
    "dist/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:server",
    "build:server": "esbuild server/index.ts server/api.ts server/state.ts server/ssl.ts --outdir=server --format=esm --platform=node --packages=external",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "voice",
    "ai",
    "avatar",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.4.0",
    "open": "^10.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "selfsigned": "^2.4.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react": "^4.2.0",
    "esbuild": "^0.21.0",
    "eslint": "^8.55.0",
    "jsdom": "^27.0.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^2.1.9"
  }
}
